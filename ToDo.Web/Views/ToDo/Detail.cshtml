@model List<ToDoAPI.Entities.DTOs.ToDo.TodoDto>

<h1>ToDo List</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>User</th>
            <th>Actions</th> <!-- Silme butonu -->
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model)
        {
            <tr>
                <td>@todo.Title</td>
                <td>@todo.Description</td>
                <td>@todo.Status</td>
                <td>@todo.UserName</td>
                <td>
                    <form asp-action="Delete" asp-controller="Todo" method="post" asp-route-id="@todo.TodoId"
                          onsubmit="return confirm('Bu görevi silmek istediğine emin misin?');">
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Todo/TodoList" class="btn btn-primary">Back to List</a>
