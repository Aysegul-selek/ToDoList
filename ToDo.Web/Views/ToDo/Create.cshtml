@model ToDoAPI.Entities.DTOs.ToDo.TodoCreateDTO

<!-- Create New ToDo Section -->
<div class="modal-dialog" role="document" style="max-width: 600px; margin: auto;">
    <div class="modal-content">
        <div class="modal-header" style="background-color: #8B4513; color: white; border-bottom: 1px solid #ccc;">
            <h5 class="modal-title"><i class="mdi mdi-plus-circle-outline"></i> Create New ToDo</h5>
        </div>
        <div class="modal-body">
            <!-- Form for creating a new ToDo -->
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label for="Title">Title</label>
                    <input asp-for="Title" class="form-control" id="Title" placeholder="Enter the title" required />
                </div>
                <div class="form-group">
                    <label for="Description">Description</label>
                    <textarea asp-for="Description" class="form-control" id="Description" placeholder="Enter a brief description" rows="4" required></textarea>
                </div>
                <div class="form-group">
                    <label for="UserId">User ID</label>
                    <input asp-for="UserId" class="form-control" id="UserId" placeholder="Enter user ID" required />
                </div>
                <div class="form-group">
                    <label for="UserName">User Name</label>
                    <input asp-for="UserName" class="form-control" id="UserName" placeholder="Enter user name" required />
                </div>
                <div class="form-group">
                    <label for="Status">Status</label>
                    <select asp-for="Status" class="form-control" id="Status" required>
                        <option value="1">Pending</option>
                        <option value="2">In Progress</option>
                        <option value="3">Completed</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-warning w-100 mt-3">Save Todo</button>
            </form>
        </div>
        <div class="modal-footer">
            <a href="/Todo/TodoList" class="btn btn-secondary w-100">Back to List</a>
        </div>
    </div>
</div>
