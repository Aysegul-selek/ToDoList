<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ToDo</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap JS (Popper dahil) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/todolist.css" rel="stylesheet" />
</head>
<body>
    @RenderSection("Scripts", required: false)
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="ToDo" asp-action="TodoList">
                    <i class="bi bi-kanban"></i> ToDoList
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="ToDo" asp-action="Detail">Details</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item" id="username-display"></li>
                        <li class="nav-item" id="login-link">
                            <a class="nav-link" href="/Account/Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Tarih ve Saat Barı -->
        <div class="bg-light text-end py-1 px-3" style="font-size:0.9rem; font-weight:500; color:#555;">
            @DateTime.Now.ToString("dd MMMM yyyy, HH:mm")
        </div>
    </header>

    <script>
        const username = localStorage.getItem("username");
        const userElement = document.getElementById("username-display");
        const loginLink = document.getElementById("login-link");

        if(username && userElement) {
            userElement.innerHTML = `<span class="nav-link text-white">Merhaba, ${username}</span>`;
            if(loginLink) loginLink.style.display = "none";
        }
    </script>


    <!-- RenderBody: Page content rendered here -->
    @RenderBody()

</body>
</html>
